<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <!--标题-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/public_red"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="提示"/>

    <!--内容-->

    <TextView
        android:id="@+id/upgrade_dialog_msg_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp" />

    <ProgressBar
        android:id="@+id/upgrade_dialog_pb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"/>

    <!--两个按钮-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/upgrade_dialog_download_btn"
            style="@style/dialog_btn"
            android:text="下载"
            />


        <Button
            android:id="@+id/upgrade_dialog_cancel_btn"
            style="@style/dialog_btn"
            android:text="取消"
            />
    </LinearLayout>
</LinearLayout>